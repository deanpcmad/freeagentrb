#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "free_agent"

# Load environment variables from .env file
require 'dotenv/load'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

# @access_token = Igdb::AccessToken.new(client_id: ENV["CLIENT_ID"], client_secret: ENV["CLIENT_SECRET"])

@oauth = FreeAgent::OAuth.new(sandbox: true, client_id: ENV["FREEAGENT_CLIENT_ID"], client_secret: ENV["FREEAGENT_CLIENT_SECRET"])

@client = FreeAgent::Client.new(access_token: ENV["ACCESS_TOKEN"], sandbox: true)

require "irb"
IRB.start(__FILE__)
